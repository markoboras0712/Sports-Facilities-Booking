{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["../types", "node_modules/@types"],
  },
  "compileOnSave": true,
  "include": ["src", "../types"]
}
